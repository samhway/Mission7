@{
    Layout = null;
}

@model LoginModel

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bookstore Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <div class="p-2" style="background-color: darkslateblue; color: lightgrey;">
        <span class="navbar-brand m-1-2">Bookstore</span>
    </div>

    <div class="container">
        <div class="jumbotron">
            <h1 class="display-3">Log-in</h1>
            <p class="lead">Enter your credentials for administrator privileges</p>
            <hr class="my-2" />
            <p>Be sure to log out when you have finished your changes!</p>
        </div>
    </div>

    <div class="m-1 p-1">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-controller="Account" asp-action="Login">

            <div class="form-group">
                <label asp-for="username">Username: </label>
                <input asp-for="username" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="password">Password: </label>
                <input asp-for="password" class="form-control" type="password" />
            </div>

            <button class="btn btn-primary" type="submit" data-toggle="tooltip"
                data-placement="bottom" title="Be sure to double check your username and password before attempting to log in">Log In</button>

            <input type="hidden" asp-for="returnUrl" />
        </form>
    </div>
</body>

</html>