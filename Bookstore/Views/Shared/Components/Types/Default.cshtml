@{
}
@model IEnumerable<string>

<div class="d-grid">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1" class="btn m-1 @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-secondary")">Home</a><br />

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@t" asp-route-pageNum="1"
           class="btn m-1 @(ViewBag.SelectedCategory == t ? "btn-primary" : "btn-outline-secondary")">@t</a><br />
    }
</div>